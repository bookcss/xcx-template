  padding: 5px;
  color: #000;
  background-color: #fff;
}

.recommend-list .activity-content .product-msg .h2 {
  font-size: 14px;
  font-weight: normal;
}

.recommend-list .activity-content .product-msg .price-box span {
  color: #fe6547;
  font-weight: 700;
  font-size: 18px;
}

.recommend-list .activity-content .product-msg .price-box span.old-price {
  font-size: 14px;
  color: #999;
  text-decoration: line-through;
  font-weight: normal;
}

.recommend-list .activity-content .product-msg .price-box em {
  font-style: normal;
}

.red-pack {
  margin-top: 10px;
  /* height: 0; */
  /* padding-bottom: 18%; */
  background: transparent;
}
.red-pack .btn{
  padding: 8rpx 30rpx;
  background: #fff
}
.red-pack-cb {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 2000;
  background: rgba(0, 0, 0, 0.3);
}

.red-pack-cb>view {
  margin-top: 40%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.red-pack-cb image {
  width: 80%;
}

.red-pack-cb .close {
  position: relative;
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  z-index: 22;
  overflow: hidden;
  margin-right: 80rpx;
  margin-bottom: -40rpx;
  align-self: flex-end;
}

.close::Before, .close::after {
  width: 200%;
  left: -50%;
}

.close::before {
  -webkit-transform: rotate(45deg);
  -moz-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  -o-transform: rotate(45deg);
  transform: rotate(45deg);
}

.close::before, .close::after {
  content: '';
  position: absolute;
  height: 2px;
  width: 100%;
  top: 50%;
  left: 0;
  margin-top: -1px;
  background: #fff;
}

.close::after {
  -webkit-transform: rotate(-45deg);
  -moz-transform: rotate(-45deg);
  -ms-transform: rotate(-45deg);
  -o-transform: rotate(-45deg);
  transform: rotate(-45deg);
}

.red-pack-btn {
  width: 80%;
  height: 300px;
  text-align:center;
}
