  font-size: 0;
  margin: 5px 0;
  height: 44px;
  overflow: hidden;
}

.base-msg-label span {
  display: inline-block;
  margin: 0 5px 5px 0;
  padding: 0.5px 3px;
  color: #fff;
  font-size: 12px;
  height: 18px;
  line-height: 18px;
}

.base-msg-label span {
