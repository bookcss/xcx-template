.shop-cart{
    padding-bottom: 60px;
    border-top:1px solid #efefef;
    box-sizing:border-box;

}
.shop-cart .module{
  margin-bottom: 10px;

}
.shop-cart  .shop-cart-header{
    position: relative;
    background-color: #F7C9C0;
    padding:10px;
    color:#666;
    font-size: 12px;
}
.shop-cart  .shop-cart-header .link{
    position: absolute;
    top:10px;
    right:10px;
    font-size: 12px;
}
.shop-cart .shop-cart-opertion{
    position: fixed;
    left:0;
    right: 0;
    bottom: 0;
    font-size: 14px;
    border-top: 1px solid #eee;
    color:#000;
    background-color: #fff;
}
.shop-cart .shop-cart-opertion .all-select{
    margin-left: 10px;
    vertical-align: middle;
}
.shop-cart .shop-cart-opertion .left{
    padding: 20px;
}
.shop-cart .shop-cart-opertion .right{
  position: absolute;
  top:50%;
  right:20px;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%);

}
.shop-cart .shop-cart-opertion .a{
    display: inline-block;
    margin-left: 10px;
    padding:10px 15px;
    text-align: center;
    color:#fff;
    background-color: #ff2600;
    border-radius: 4px;
    font-size: 12px;
    vertical-align:middle;
}
.shop-cart .shop-cart-opertion .a.disabled{
    background-color: #eee;
    color:#666;
}
.shop-cart .module .sold-tip{
    position: relative;
    padding: 10px;
    text-align: center;
    font-size: 12px;
    background-color: #fff;
}
.shop-cart .module .sold-tip .clean{
    position: absolute;
    top:10px;
    right: 10px;
}
.table-view {
  position: relative;
  overflow: hidden;
}
.table-view .table-view-cell {
  display: block;
  position: relative;
  margin-bottom: 10px;
  padding:20px 20px 20px 50px;
  border-bottom: 1px solid #f5f4f4;
  background-color: #fff;
  transition: all 0.2s linear;
  -webkit-transition: all 0.2s linear;
}
.table-view .table-view-cell:last-child{
    margin-bottom: 0;
}
.table-view .table-view-cell  .label{
    position: absolute;
    top:52px;
    left:10px;
    width: 35px;
    text-align: center;
}
.table-view .table-view-cell  .label .sold-label{
    padding: 2px 0;
    font-size:12px;
    background-color:#eee;
}

.table-view .table-view-cell .media-object{
    position: relative;
    overflow: hidden;
    text-align: center;
    display: block;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
}
.table-view .table-view-cell .media-object .bh{
    position: absolute;
    left:0;
    right: 0;
    bottom: 0;
    padding: 2px 0;
    font-size: 12px;
    background-color: rgba(0,0,0,0.5);
    color:#fff;
}

.table-view .table-view-cell .media-object{
  margin-right: 10px;
  width: 90px;
  height: 90px;
  border:1px solid #eee;
}

.table-view .table-view-cell .media-tit{
  margin-bottom: 5px;
  font-size: 18px;
  font-weight: normal;
  color: #333;
}

.table-view .table-view-cell .media-sum a{
  color: #999;
}

.table-view .table-view-cell .media-footer{
    position: relative;
}
.table-view .table-view-cell .cart-num{
    position: absolute;
    top:0;
    right: 0;
}
.table-view .table-view-cell .media-body .service-box{
    margin-bottom:5px;
    font-size: 12px;
    color:#999;
}
.inner.txt{
    background-color: #fff;
    width: 100%;
    padding: 10px;
    z-index: 5;
    transition: left 0.2s ease-in-out;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.inner.del{
    position: absolute;
    top:0;
    bottom: 0;
    right: -99px;
    z-index: 4;
    width: 180rpx;
    display: inline-flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
     color: #fff;
    background-color: #e64340;
}
