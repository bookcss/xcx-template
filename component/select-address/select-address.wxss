/*======== 省市区样式 ========*/

.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}
.clearfix {
  display: block;
  zoom: 1;
}

.area-box{
  position: fixed;
  top:0;
  right: 0;
  left:0;
  bottom: 0;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background-color: rgba(0,0,0,0.5);
  z-index: 9999;
}
.area-content {
  position: absolute;
  bottom: 0;
  left:0;
  right: 0;
  z-index:9998;
  background-color: #fff;
}


.area-box .a,
.area-box .li {
    -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
    -webkit-user-select: none;
    -moz-user-focus: none;
    -moz-user-select: none;
}
.area-box .area-tit{
  position: relative;
  padding:32rpx;
  text-align:center;
  color:#333;
  font-size:34rpx;
  font-weight:700;
}

.area-box .area-tit .area-close{
  position: absolute;
  top:0;
  right:0;
  color:#999;
  padding:16px;
  font-size:14px;
}
.area-box  .area-list .area-tab {
  padding:0 10px;
  border-bottom:1px solid #FAFAFA;
  font-size:32rpx;
}
.area-box  .area-list .area-tab .li{
  float:left;
  padding:10px;
}
.area-box  .area-list .area-tab .li.active{
  color:#D83C4A;
  border-bottom:2px solid #D83C4A;
}
.area-box  .area-list .area-list{
  margin:0 32rpx;
  height:480rpx;
  font-size: 32rpx;
  overflow:auto;
  -webkit-overflow-scrolling: touch;
}

.area-box  .area-list .area-list .li{
  position: relative;
  padding:24rpx 0;
  border-bottom: 1px solid #eee;
}
.area-box  .area-list .area-list .li.active{
    color: #D83C4A;
}
.area-box  .area-list .area-list .li.active .select{
  position: absolute;
  top:50%;
  right:0;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%);
}