/*立即弹框样式*/

.purchase-box .select-label {
    padding: 15px;
    color: #000;
}

.purchase-box .select-label .select-label-li {
    margin-bottom: 12px;
}

.purchase-box .select-label .left {
    margin-bottom: 8px;
    font-size: 13px;
}

.purchase-box .select-label .right {}

.purchase-box .select-label .right .span {
    display: inline-block;
    min-width: 50px;
    text-align: center;
    border: 1px solid #AEAEAE;
    border-radius: 3px;
    margin-bottom: 8px;
    margin-right: 10px;
    font-size: 12px;
    padding: 8px;
}

.purchase-box .select-label .right .span.active {
    color: #fff;
    border: 1px solid #fe6457;
    background-color: #fe6457;
}

.purchase-box .select-label .right .num {
    color: #fc2249;
    font-size: 20px;
}



.purchase-box .service {
    position: relative;
    padding: 0 15px 5px;
    font-size: 12px;
    color: #8a8a8f;
}

.purchase-box .service .more {
    position: absolute;
    top: 0;
    right: 15px;
    color: #19efc3;
}

.purchase-box .service .p {
    margin-bottom: 7px;
}

.purchase-box .service .sum {
    line-height: 18px;
}

.purchase-box .service .p text {
    vertical-align: middle;
}

.purchase-box .opertion {
    display: flex;
    display: -webkit-flex;
    border-top: 1px solid #f5f4f4;
}

.purchase-box .opertion .a {
    display: block;
    padding: 14px;
    text-align: center;
    color: #fff;
    background-color: #fe6457;
    font-size: 16px;
    flex:1;
    -webkit-flex:1;
}
.purchase-box .opertion .a.orange{
  background-color: #FED547;
}

.purchase-box .opertion .a .span {
    margin-left: 5px;
    vertical-align: middle;
}

.purchase-box .opertion .a.disabled {
    background-color: #eee;
    color: #999;
}

.select-visible-header {
    position: relative;
    padding: 14px 10px;
    border-bottom: 1px solid #ddd;
}

.select-visible-header .left {
    float: left;
    width: 80px;
    height: 80px;
    margin-top: -30px;
    margin-right: 10px;
}

.select-visible-header .left image {
    /*box-shadow:0 4px 10px 0 rgba(0,0,0,0.1);*/
    box-shadow: 0 1px 1px 0 #ddd;
    border-radius: 5px;
}

.select-visible-header .right {
    overflow: hidden;
}

.select-visible-header .right .name {
    display: block;
    font-size: 16px;
    color: #000;
}

.select-visible-header .right .price {
    margin: 2px 0;
    font-size: 14px;
}

.select-visible-header .right .service-arr {
    font-size: 12px;
    color: #999;
}