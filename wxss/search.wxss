.search-warpper{
  height: 45px;
}
.search-box{
  position: fixed;
  top:0;
  left:0;
  right: 0;
  z-index: 996;
  border-top: 1px solid #f5f4f4;
  border-bottom: 1px solid #f5f4f4;
}
.search-box .search-input{
  position: relative;
  padding:8px;
  background-color: #fff;
}
.search-box .search-input input {
  width: 100%;
  padding-left: 32px;
  background-color: #F7F7F7;
  border-radius: 25px;
  vertical-align: inherit;
  height:28px;
  font-size:12px;
  color:#A6A6A6;
  box-sizing: border-box;
  -webkit-user-select: none;
  user-select: none;
  -webkit-touch-callout: none;

}
.search-box .search-input input:focus{
  font-size:12px;
}

.search-box .search-input input::-webkit-input-placeholder{
  color:#A6A6A6;
  font-size:12px;
}

.search-box .search-input .default-input{
  position:absolute;
  top:50%;
  left:0;
  right:0;
  z-index:9999;
  transform:translateY(-50%);
  -webkit-transform:translateY(-50%);
  text-align:center;
  font-size: 12px;

}
.search-box .search-input .default-input image{
  margin-right: 5px;
}
.search-box .search-input .default-input image,
.search-box .search-input .default-input text{
  vertical-align: middle;
}
.search-box .search-input .search-icon {
  position: absolute;
  top:8px;
  left: 0;
  text-align: center;
}
.search-box .search-input .search-label{
  position:absolute;
  top:50%;
  left:30px;
  z-index: 997;
  transform:translateY(-50%);
  -webkit-transform:translateY(-50%);
  padding:2px 10px;
  background-color:#808080;
  border-radius:10px;
  z-index:99;
  color:#fff;
  font-size:12px;

}
.search-box .search-input .search-label .ellipsis{
  display: inline-block;
  max-width: 100px;
  vertical-align:middle;
}
.search-box .search-input .search-label .close-label{
  margin-left: 10px;
  vertical-align: middle;
}
.search-box .search-input .search-label .close-label{

  font-size:12px;
}
.search-box .search-input ul li {
  position: relative;
}
.search-box .search-input ul li .search-icon {
  left: 10px;
}

.search-box .search-input ul {
  display: flex;
}
.search-box .search-input ul li:first-child {
  flex: 1;
}

.search-box .search-input ul li .a {
  display: inline-block;
  padding: 0 8px;
  color:#FF2600;
  font-size:32rpx;
  line-height:56rpx;

}
.search-box .search-input.open ul li:last-child {
  display: block;
}
.search-box .search-input.open ul li input {
  text-align: left;
}
.search-box .search-input.open .close-icon{
  position:absolute;
  top:0;
  right:0;
  z-index:9999;
  /*transform:translateY(-50%);*/
  /*-webkit-transform:translateY(-50%);*/
  padding:0 10px 0 20px;
  height:100%;
  bottom:0;
  line-height:28px;


}
.search-box .search-content{
  height: -webkit-calc(100vh - 45px);
  height: -moz-calc(100vh - 45px);
  height: calc(100vh - 45px);
  background-color: #F5F5F5;
  border-top:1px solid #f5f4f4;
  overflow-y:auto;
  overflow-x:hidden;
  -webkit-overflow-scrolling: touch;

}
.search-box .search-content .module {
  margin-bottom: 8px;
  background-color: #fff;
  border-bottom: 1px solid #E5E5E5;
}
.search-box .search-content .module .module-title {
  position: relative;
  padding: 8px 16px;
  color: #333;
}
.search-box .search-content .module .module-title .h1 {
  font-weight: normal;
  font-size: 14px;
}

.search-box .search-content .module .module-content{
  margin:0 -6px;
  padding: 8px 16px;
}
.search-box .search-content .module .module-content .label{
  display:inline-block;
  min-width:70px;
  margin:0 6px 12px;
  padding:7px;
  color:rgba(127,127,127,1);
  border-radius:4px;
  border:1px solid rgba(127,127,127,1);
  font-size: 12px;
  text-align:center;

}
.search-box .search-content .module .clear-history{
  margin:0 16px;
  padding: 16px 0;
  text-align: center;
  border-top:1px solid rgba(229,229,229,1);
  color:rgba(127,127,127,1);
  font-size: 13px;
}
.search-list{
  position: fixed;
  top:45px;
  left:0;
  right:0;
  z-index:999;
  height: -webkit-calc(100vh - 45px);
  height: -moz-calc(100vh - 45px);
  height: calc(100vh - 45px);
  background-color:#F5F5F5;
  overflow-y:auto;
  
}
.search-list ul li {
  padding: 16px;
  background-color: #fff;
  border-top: 1px solid #F1F1F1;
}
