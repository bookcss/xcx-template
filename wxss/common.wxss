.prompt{
  position: relative;
  text-align: center;
  font-weight: normal;
  color:#b2b2b2;

}
.prompt span{
	position: relative;
    display: inline-block;
    padding: 30rpx;
	  font-size: 28rpx;
    background-color: #F5F5F5;
    z-index: 2;
}
.prompt:after{
  content: '';
