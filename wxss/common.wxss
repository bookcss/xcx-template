}
.select-number-box .select-number-btn:nth-child(3) {
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
}
.select-number-box .select-number-btn:nth-child(1),
.select-number-box .select-number-btn:nth-child(3) {
    width: 30px;
    text-align: center;
    border: 1px solid #AEAEAE;
