/*详情向下弹框*/
.purchase-box {
  position: fixed;
  right:0;
  bottom: 0;
  left:0;
  z-index: 9999;
  width: 100%;
  background-color: #fff;
  transition: all 0.2s linear;
  transform: translateY(120%);
  -webkit-transform: translateY(120%);
}

.purchase-box.on{
  transform: translateY(0);
  -webkit-transform: translateY(0);
}

.purchase-modal {
  position: fixed;
  top:0;
  right:0;
  bottom: 0;
  left:0;
  z-index: 9998;
  width: 100%;
  background-color: rgba(0,0,0,0.5);
  display: none;
}
.purchase-modal.on{
  display: block;
}
.purchase-box .close {
  position: absolute;
  top: -18px;
  right: 4px;
  z-index: 99;
}

/*普遍弹框*/
.pop-wrapper{
  position: fixed;
  top:0;
  right: 0;
  left:0;
  bottom: 0;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background-color: rgba(0,0,0,0.7);
  z-index: 9999;
}
.pop-content {
  position: absolute;
  bottom: 0;
  left:0;
  right: 0;
  background-color: #fff;
}
.pop-wrapper .pop-content .pop-tit{
  position: relative;
  padding: 15px;
  color:#333;
  text-align: center;
  font-size: 18px;
  border-bottom: 1px solid #F2F2F2;
}
.pop-wrapper .pop-content .pop-close{
  position:absolute;
  top:0;
  right:10px;
  padding:15px;
  font-size:18px;
  color:#999;
}
.pop-wrapper .pop-content .pop-body{
  padding:10px;
}

.pop-content .pop-btn{
    margin-top: 10px;
    display: block;
    height: 44px;
    line-height: 44px;
    text-align: center;
    color: #fff;
    background-color: #FB664E;
    font-size: 16px;
}

/*数量选择*/
