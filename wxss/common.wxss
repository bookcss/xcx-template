/*收货信息*/
.order-receive-msg {
  padding: 16px 14px;
}
.order-receive-msg .receive-msg-left {
  float: left;
  width: 40px;
  margin-top: -4px;
}
.order-receive-msg .receive-msg-left .z-icon-receive.active {
  margin-top: 8px;
}
.order-receive-msg .receive-msg-right {
  position: relative;
  padding-right:20px;
  overflow: hidden;
}
.order-receive-msg .receive-msg-right.empty .receive-address {
  display: block;
  margin-top: 5px;
  color: #666;

}
.order-receive-msg .receive-msg-right.empty:after {
  top: 20px;
}
.order-receive-msg .receive-msg-right.empty:before {
  top: 30px;
}
.order-receive-msg .receive-msg-right.empty .receive-phone {
  right: 20px;
}
.order-receive-msg .receive-msg-right:after {
  content: '';
  display: block;
  width: 14px;
  height: 1px;
  background-color: #e7e7e7;
  position: absolute;
  top: 4px;
  right: 0;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}
.order-receive-msg .receive-msg-right:before {
  content: '';
  display: block;
  width: 14px;
  height: 1px;
  background-color: #e7e7e7;
  position: absolute;
  top: 14px;
  right: 0;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
}
.order-receive-msg .receive-msg-right.no-arrow:after,
.order-receive-msg .receive-msg-right.no-arrow:before {
  display: none;
}
.order-receive-msg .receive-msg-right.no-arrow .receive-phone {
  right: 0px;
}
.order-receive-msg .receive-msg-right a {
  color: #666;
  font-size:28rpx;
}
.order-receive-msg .receive-msg-right ul li {
	display: block;
  	margin-bottom: 5px;
}
.order-receive-msg .receive-msg-right ul li :last-child {
  margin-right: 20px;
}
.order-receive-msg .receive-msg-right .receive-phone {
  position: absolute;
  top: 0;
  right: 0px;
}

